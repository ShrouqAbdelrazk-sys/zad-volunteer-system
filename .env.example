# إعدادات البيئة - Environment Variables
# نسخ هذا الملف إلى .env واستبدال القيم

# إعدادات الخادم
NODE_ENV=production
PORT=3000

# رابط قاعدة البيانات Neon
# استبدل بالرابط الخاص بك من Neon Console
DATABASE_URL=postgresql://username:password@ep-example.us-east-2.aws.neon.tech/dbname?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-example.us-east-2.aws.neon.tech/dbname?sslmode=require

# إعدادات قاعدة البيانات البديلة (في حالة عدم استخدام DATABASE_URL)
DB_HOST=ep-example.us-east-2.aws.neon.tech
DB_PORT=5432
DB_NAME=dbname
DB_USER=username
DB_PASSWORD=password

# إعدادات JWT للمصادقة
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random-123456789
JWT_EXPIRE_IN=7d

# إعدادات CORS
FRONTEND_URL=*

# إعدادات أخرى
LOG_LEVEL=info